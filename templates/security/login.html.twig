{% extends 'blank.html.twig' %}

{% block title %}Se connecter -
	{{ parent() }}
{% endblock %}

{% block body %}
	<div class="container py-5">
		<div class="row">
			<div class="col-md-6 mx-auto">
				{% if app.user %}
					<div class="alert alert-info" role="alert">
						Vous êtes connecté en tant que
						{{ app.user.username }},
						<a href="{{ path('app_logout') }}">Se déconnecter</a>
					</div>
				{% else %}
					<h1 class="h3 mb-3 font-weight-normal">Se connecter</h1>
					<div class="card shadow-sm">

                        <div class="card-header">
                            Je me connecte ou <a href="{{ path('app_register') }}">je m'inscris</a>
                        </div>
						<div class="card-body">

							<form method="post">
								{% if error %}
									<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
								{% endif %}
								<div class="mb-3">
									<label for="inputEmail" class="form-label">Adresse e-mail</label>
									<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
								</div>
								<div class="mb-3">
									<label for="inputPassword" class="form-label">Mot de passe</label>
									<input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
								</div>

								<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">


								<div class="checkbox mb-3">
									<label>
										<input type="checkbox" name="_remember_me">
										Se souvenir de moi
									</label>
								</div>


								<button class="btn btn-gradient border-0" type="submit">
									Connexion
								</button>
							</form>
						</div>
					</div>
				{% endif %}
				<div class="mt-1">
					<a href="{{ path('home') }}">
						<i class="fal fa-long-arrow-left mt-3"></i>
						Retour
					</a>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
